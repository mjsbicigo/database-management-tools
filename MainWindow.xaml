<Window x:Class="SqlServerManagementTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQL Server Management Tools"
        Height="625"
        Width="780"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Estilo para botões -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004378"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para TextBox e PasswordBox -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para Label -->
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="Export Database">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Botão de conexão e status -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Connect Server..." Width="120" Click="OpenConnectionExportDialog_Click" Name="OpenConnectionExportButton" Grid.Column="0"/>
                        <Label Content="Server:" Margin="10,0,0,0" VerticalAlignment="Center" Grid.Column="1"/>
                        <TextBlock x:Name="ConnectedServerExportText" Text="None" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0" Grid.Column="2"/>
                        <Label Content="Status:" Margin="10,0,0,0" VerticalAlignment="Center" Grid.Column="3"/>
                        <TextBlock x:Name="ConnectionStatusExportText" Text="Disconnected." Foreground="Red" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0" Grid.Column="4"/>
                    </Grid>

                    <!-- Checkbox Select All e Lista -->
                    <StackPanel Grid.Row="1" Margin="0">
                        <CheckBox x:Name="SelectAllDatabasesExportCheckBox"
                                  Content="Select all"
                                  Margin="10,0,10,5"
                                  Click="SelectAllDatabasesExportCheckBox_Click"/>
                        
                        <ListBox x:Name="DatabaseExportList"
                                 Height="360"
                                 Margin="10,0,10,10"
                                 ItemsSource="{Binding DatabaseExportItems}">
                            
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </StackPanel>

                    <!-- Caminho da pasta de exportação -->
                    <Grid Grid.Row="2" Margin="10,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="ExportPathBox"
                                 IsReadOnly="True"
                                 Text="Folder where the .bacpac files will be saved."
                                 Foreground="Gray"
                                 Height="30"
                                 VerticalAlignment="Center"
                                 Margin="0,0,5,0"
                                 Grid.Column="0"/>
                        <Button Content="Select Folder"
                                Name="ChooseExportFolderButton"
                                Click="ChooseExportFolder_Click"
                                Width="95"
                                Height="30"
                                Margin="5,0,5,0"
                                Grid.Column="1"/>
                        <Button Content="Export"
                                Name="ExportAllButton"
                                Click="ExportAll_Click"
                                Width="95"
                                Height="30"
                                Margin="5,0,0,0"
                                Grid.Column="2"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Import Database">
                <StackPanel Margin="0">

                    <!-- Botão de conexão e status -->
                    <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Top">
                        <Button Content="Connect Server..." Width="120" Click="OpenConnectionImportDialog_Click" Name="OpenConnectionImportButton"/>
                        <Label Content="Server:" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ConnectedServerImportText" Text="None" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0"/>
                        <Label Content="Status:" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ConnectionStatusImportText" Text="Disconnected." Foreground="Red" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="0">
                        <CheckBox x:Name="SelectAllDatabasesImportCheckBox"
                                  Content="Select all"
                                  Margin="10,0,10,5"
                                  Click="SelectAllDatabasesImportCheckBox_Click"/>
                        <ListBox x:Name="DatabaseImportList"
                                 Height="360"
                                 Margin="10,0,10,10"
                                 ItemsSource="{Binding DatabaseImportItems}">
                            
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <!-- Caminho da pasta de importação e botões -->
                    <Grid Margin="10,0,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="ImportPathBox"
                                 Text="Folder where the .bacpac files are located."
                                 Foreground="Gray"
                                 IsReadOnly="True"
                                 Height="30"
                                 VerticalAlignment="Center"
                                 Margin="0,0,5,0"
                                 Grid.Column="0"/>

                        <Button Content="Select Files"
                                Name="ChooseImportFolderButton"
                                Click="ChooseImportFolder_Click"
                                Width="95"
                                Height="30"
                                Margin="5,0,5,0"
                                Grid.Column="1"/>

                        <Button Content="Import All"
                                Name="ImportAllButton"
                                Click="ImportAll_Click"
                                Width="95"
                                Height="30"
                                Margin="5,0,0,0"
                                Grid.Column="2"/>
                    </Grid>
                </StackPanel>
            </TabItem>

        </TabControl>

        <Grid Grid.Row="1" Margin="0,0,0,0.5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ProgressBar x:Name="OperationProgress"
                 Height="20"
                 Minimum="0"
                 Maximum="100"
                 Grid.Row="0"
                 Margin="0,10,0,5"/>

            <Border BorderBrush="Gray" BorderThickness="1" Padding="4" Margin="0,0,0,0" Grid.Row="1">
                <TextBlock x:Name="StatusText"
                           Height="20"
                           FontSize="14"
                           Foreground="#333"
                           FontWeight="SemiBold"
                           Text="Application Ready!"
                           TextAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>

    </Grid>
</Window>
