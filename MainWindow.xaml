<Window x:Class="SqlServerManagementTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQL Server Management Tools" Height="600" Width="600" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Estilo para botões -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004378"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para TextBox e PasswordBox -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para Label -->
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="Export Database">
                <StackPanel Margin="0">

                    <!-- Botão de conexão e status -->
                    <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Top">
                        <Button Content="Connect Server..." Width="120" Click="OpenConnectionExportDialog_Click" Name="OpenConnectionExportButton"/>
                        <Label Content="Server:" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ConnectedServerExportText" Text="None" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0"/>
                        <Label Content="Status:" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ConnectionStatusExportText" Text="Disconnected." Foreground="Red" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0"/>
                    </StackPanel>

                    <StackPanel Margin="0">
                        <!-- Checkbox Select All -->
                        <CheckBox x:Name="SelectAllDatabasesCheckBox"
                                  Content="Select all"
                                  Margin="10,0,10,5"
                                  Click="SelectAllDatabasesCheckBox_Click"/>

                        <!-- ListBox com CheckBoxes -->
                        <ListBox x:Name="DatabaseList" Height="350" Margin="10,0,10,10" ItemsSource="{Binding DatabaseItems}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <!-- Caminho da pasta de exportação -->
                    <Grid Margin="10,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="ExportPathBox"
                                 IsReadOnly="True"
                                 Text="Folder where the .bacpac files will be saved."
                                 Foreground="Gray"
                                 Height="30"
                                 VerticalAlignment="Center"
                                 Margin="0,0,5,0"
                                 Grid.Column="0"/>

                        <Button Content="Select Folder"
                                Name = "ChooseExportFolderButton"
                                Click="ChooseExportFolder_Click"
                                Width="95"
                                Height="30"
                                Margin="5,0,5,0"
                                Grid.Column="1"/>

                        <Button Content="Export"
                                Name="ExportSelectedButton"
                                Click="ExportSelected_Click"
                                Width="95"
                                Height="30"
                                Margin="5,0,0,0"
                                Grid.Column="2"/>
                    </Grid>
                </StackPanel>
            </TabItem>

            <TabItem Header="Import Database">
                <StackPanel Margin="0">

                    <!-- Botão de conexão e status -->
                    <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Top">
                        <Button Content="Connect Server..." Width="120" Click="OpenConnectionImportDialog_Click" Name="OpenConnectionImportButton"/>
                        <Label Content="Server:" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ConnectedServerImportText" Text="None" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0"/>
                        <Label Content="Status:" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ConnectionStatusImportText" Text="Disconnected." Foreground="Red" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0"/>
                    </StackPanel>

                    <ListBox x:Name="BacpacList" Height="380" SelectionMode="Extended" Margin="10,0,10,10"/>

                    <!-- Caminho da pasta de importação e botões -->
                    <Grid Margin="10,0,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="ImportPathBox"
                                 Foreground="Gray"
                                 IsReadOnly="True"
                                 Height="30"
                                 VerticalAlignment="Center"
                                 Margin="0,0,5,0"
                                 Grid.Column="0"/>

                        <Button Content="Select Files"
                                Name="ChooseImportFolderButton"
                                Click="ChooseImportFolder_Click"
                                Width="95"
                                Height="30"
                                Margin="5,0,5,0"
                                Grid.Column="1"/>

                        <Button Content="Import All"
                                Name="ImportSelectedButton"
                                Click="ImportAll_Click"
                                Width="95"
                                Height="30"
                                Margin="5,0,0,0"
                                Grid.Column="2"/>
                    </Grid>
                </StackPanel>
            </TabItem>

        </TabControl>

        <Grid Grid.Row="1" Margin="10,0,10,0.5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ProgressBar x:Name="OperationProgress"
                 Height="20"
                 Minimum="0"
                 Maximum="100"
                 Grid.Row="0"
                 Margin="0,0,0,2"/>

            <TextBlock x:Name="StatusText"
               Grid.Row="1"
               Height="20"
               FontSize="12"
               Foreground="#333"
               FontWeight="SemiBold"
               Text="Application Ready!"
               TextAlignment="Center"/>
        </Grid>

    </Grid>
</Window>
