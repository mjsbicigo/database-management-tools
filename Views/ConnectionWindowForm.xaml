<Window x:Class="DatabaseManagementTools.Views.ConnectionWindowForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQL Server Connection" 
        Height="290" 
        Width="400" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <StackPanel Margin="10,10,10,10">

        <Label Content="SQL Server Address:" 
               Margin="0,0,0,0" 
               HorizontalAlignment="Left" 
               HorizontalContentAlignment="Left"/>

        <TextBox x:Name="ServerTextBox" 
                 Margin="5,0,5,0"
                 Height="25"
                 VerticalContentAlignment="Center"/>

        <Label Content="User:" 
               Margin="0,10,0,0" 
               HorizontalAlignment="Left"
               HorizontalContentAlignment="Left"/>
        
        <TextBox x:Name="UserTextBox"
                 Margin="5,0,5,0"
                 Height="25"
                 VerticalContentAlignment="Center"/>

        <Label Content="Password:" 
               Margin="0,10,0,0" 
               HorizontalAlignment="Left"
               HorizontalContentAlignment="Left"/>

        <PasswordBox x:Name="PasswordBox" 
                     Margin="5,0,5,0"
                     Height="25"
                     VerticalContentAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,20,0,0">
            <Button Content="Connect" Width="100" Margin="5" Click="Connect_Click"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
