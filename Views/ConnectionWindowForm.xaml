<Window x:Class="SqlServerManagementTools.Views.ConnectionWindowForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQL Server Connection" Height="260" Width="400" WindowStartupLocation="CenterScreen">
    
    <StackPanel Margin="20,20,20,20">

        <Label Content="SQL Server Address:"/>
        <TextBox x:Name="ServerTextBox" />

        <Label Content="User:"/>
        <TextBox x:Name="UserTextBox" />

        <Label Content="Password:"/>
        <PasswordBox x:Name="PasswordBox" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Connect" Width="100" Margin="5" Click="Connect_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
